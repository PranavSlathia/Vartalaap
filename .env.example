# Vartalaap Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# =============================================================================
# API Keys (Required)
# =============================================================================
GROQ_API_KEY=gsk_xxxx
DEEPGRAM_API_KEY=xxxx
PLIVO_AUTH_ID=xxxx
PLIVO_AUTH_TOKEN=xxxx

# =============================================================================
# Security Keys (Required)
# Generate with: openssl rand -hex 32
# =============================================================================

# AES-256-GCM key for encrypting phone numbers (64 hex chars = 32 bytes)
PHONE_ENCRYPTION_KEY=

# HMAC-SHA256 pepper for hashing phone numbers (64 hex chars = 32 bytes)
PHONE_HASH_PEPPER=

# Admin password hash (generate with: python -c "import bcrypt; print(bcrypt.hashpw(b'yourpassword', bcrypt.gensalt()).decode())")
ADMIN_PASSWORD_HASH=

# Session secret for admin UI (32+ random chars)
SESSION_SECRET=

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=sqlite+aiosqlite:///./data/vartalaap.db

# =============================================================================
# Redis (for arq task queue)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# =============================================================================
# Feature Flags
# =============================================================================

# Enable Edge TTS as fallback (unofficial API, may be unreliable)
EDGE_TTS_ENABLED=false
