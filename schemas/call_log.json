{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CallLog",
  "type": "object",
  "required": ["business_id"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier (UUID)"
    },
    "business_id": {
      "type": "string",
      "description": "Business that received this call"
    },
    "caller_id_hash": {
      "type": "string",
      "description": "HMAC-SHA256 hash of caller phone"
    },
    "call_start": {
      "type": "string",
      "format": "date-time",
      "description": "When call started (set on creation)"
    },
    "call_end": {
      "type": "string",
      "format": "date-time",
      "description": "When call ended"
    },
    "duration_seconds": {
      "type": "integer",
      "minimum": 0
    },
    "detected_language": {
      "type": "string",
      "enum": ["hindi", "english", "hinglish"]
    },
    "transcript": {
      "type": "string",
      "description": "JSON string of conversation turns"
    },
    "extracted_info": {
      "type": "string",
      "description": "JSON string of extracted entities"
    },
    "outcome": {
      "type": "string",
      "enum": ["resolved", "fallback", "dropped", "error", "privacy_opt_out"],
      "description": "How the call ended (set when call completes)"
    },
    "consent_type": {
      "type": "string",
      "enum": ["none", "transcript", "whatsapp"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "stt_latency_p50_ms": {
      "type": "number",
      "description": "P50 STT latency in milliseconds"
    },
    "llm_latency_p50_ms": {
      "type": "number",
      "description": "P50 LLM first token latency in milliseconds"
    },
    "tts_latency_p50_ms": {
      "type": "number",
      "description": "P50 TTS first chunk latency in milliseconds"
    },
    "barge_in_count": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Number of barge-ins during call"
    },
    "total_turns": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Total conversation turns"
    },
    "call_rating": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "description": "Caller satisfaction rating (1-5 stars)"
    },
    "caller_feedback": {
      "type": "string",
      "maxLength": 500,
      "description": "Optional caller feedback text"
    },
    "rating_method": {
      "type": "string",
      "enum": ["dtmf", "admin", "auto"],
      "description": "How rating was collected"
    },
    "call_summary": {
      "type": "string",
      "maxLength": 500,
      "description": "LLM-generated call summary"
    },
    "call_category": {
      "type": "string",
      "enum": ["booking", "inquiry", "complaint", "spam", "other"],
      "description": "Call intent category"
    }
  }
}
